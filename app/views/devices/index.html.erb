<h1>Listing devices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Width</th>
      <th>Height</th>
      <th>Os</th>
      <th>Preview image</th>
      <th>Vertical bg</th>
      <th>Horizontal bg</th>
      <th>Screen size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.width %></td>
        <td><%= device.height %></td>
        <td><%= device.os %></td>
        <td><%= device.preview_image %></td>
        <td><%= device.vertical_bg %></td>
        <td><%= device.horizontal_bg %></td>
        <td><%= device.screen_size %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

