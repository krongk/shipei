<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :os %>
    <%= f.input :preview_image %>
    <%= f.input :vertical_bg %>
    <%= f.input :horizontal_bg %>
    <%= f.input :screen_size %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
