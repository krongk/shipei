<div class="col-md-10 col-md-offset-1">
  <%= simple_form_for(@site) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :domain %>
      <%= f.input :short_title %>
      <%= f.input :title %>
      <%= f.input :keywords %>
      <%= f.input :description %>
      <%= f.input :is_processed %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>