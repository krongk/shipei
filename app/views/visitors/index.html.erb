<!-- ==============================================
CONTACT
=============================================== -->
<section id="contact" class="add-padding-top">

  <div class="container text-center">
    
    <div class="row">
    
      <div class="col-sm-6 col-md-5 text-right scrollimation fade-up d1">
      
        <h1 class="big-text">马上开启摩适配</h1>
        
        <p class="lead">摩适配基于HTML5移动开发标准，为企业提供轻、简、快的微应用技术服务。</p>
      
        <p>
        <%= image_tag('logo.png', alt: '摩适配', border: '0px') %><br/>
        M --- more/multiple 即多重的，更多的，多功能的网站适配！
        </p>
        <p>
        跨屏幕网站设计标准：<a href="http://www.google.com/think/multiscreen/">Google Multiscreen</a><br/>
        国外响应式网站案例：<a href="http://mediaqueri.es/">Media Queries</a>
        </p>
      
      </div>
    
      <!--=== Contact Form ===-->
      <%= simple_form_for(SiteContact.new,  html: {id: "contact-form", class: "col-sm-6 col-md-offset-1 scrollimation fade-left d3", novalidate: true}) do |f| %>

        <div class="form-group">
          <label class="control-label" for="contact-url">网站</label>
          <div class="controls">
          <input id="contact-url" name="site_contact[url]" type="url" class="form-control requiredField" data-new-placeholder="网站" placeholder="网站地址" data-error-empty="*请输入网站网址" data-error-invalid="汗！这网址能访问吗？">
          <i class="fa fa-link"></i>
          </div>
        </div><!-- End name input -->
        
        <div class="form-group">
          <label class="control-label" for="contact-phone">手机号码</label>
          <div class=" controls">
           <input id="contact-phone" name="site_contact[phone]" type="mobile_phone" class="form-control requiredField" data-new-placeholder="手机号码" placeholder="手机号码" data-error-empty="*请输入手机号码" data-error-invalid="汗！这号码能收到短信吗？">
          <i class="fa fa-phone"></i>
          </div>
        </div><!-- End email input -->
        
        <div class="form-group">
          <label class="control-label" for="contact-message">需求信息</label>
          <div class="controls">
            <textarea id="contact-message" name="site_contact[note]"  placeholder="需求描述" class="form-control requiredField" data-new-placeholder="请描述网站需求" rows="6" data-error-empty="说点闲话也行"></textarea>
            <i class="fa fa-comment"></i>
          </div>
        </div><!-- End textarea -->
        
        <p><button name="submit" type="submit" class="btn btn-color2 btn-block" data-error-message="等下!" data-sending-message="发送中..." data-ok-message="发送成功"><i class="fa fa-paper-plane"></i>发送信息</button></p>
        <input type="hidden" name="submitted" id="submitted" value="true" />
        
      <% end %><!-- End contact-form -->
      
    </div>
    
  </div>

</section>

